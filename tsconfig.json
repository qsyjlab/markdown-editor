{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,            // 生成声明文件
    "declarationDir": "dist/types", // 声明文件输出目录
    "outDir": "dist",
    "target": "ES2020",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,

    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "rootDir": "./",
    "types": [],
    "paths": {
      "md-doc-editor/*": [
        "packages/*"
      ]
    }
  },
  "files": [],
  
  // "references": [
  //   { "path": "./tsconfig.base.json" },
    
  // ]
}
